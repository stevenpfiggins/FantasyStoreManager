@model IEnumerable<FantasyStoreManager.Models.StoreWithUniqueProductListItem>

@{
    ViewBag.Title = "Index";
}

<h2>My Stores</h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UniqueProducts)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueProducts)
            </td>
            <td>
                @Html.ActionLink("Add Inventory", "Create", new { id = item.StoreId }) |
                @Html.ActionLink("Inventory Details", "InventoryIndex", new { id = item.StoreId }) |
                @Html.ActionLink("Store Details", "StoreDetail", new { id = item.StoreId })
            </td>
        </tr>
    }

</table>
